@model ControleDeContatos.MVC.ViewModels.ContatoViewModel

@{
	ViewBag.Title = "Editar Contato";
}

<div class="d-flex justify-content-center align-items-center vh-100">
	<div class="card p-4 shadow-lg" style="width: 900px;">
		<div class="text-center mb-4">
			<h1>Editar Contato</h1>
		</div>

		@using (Html.BeginForm("Alterar", "Contato", FormMethod.Post))
		{
			@Html.HiddenFor(x => x.Id)

			<div class="mb-3">
				<label for="nome" class="form-label">Nome</label>
				@Html.TextBoxFor(x => x.Nome, new { @class = "form-control", placeholder = "Digite seu contato" })
				@Html.ValidationMessageFor(x => x.Nome, "", new { @class = "text-danger" })
			</div>

			<div class="mb-3">
				<label for="email" class="form-label">Email</label>
				@Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email", placeholder = "Digite o e-mail do contato" })
				@Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
			</div>

			<div class="mb-3">
				<label for="celular" class="form-label">Celular</label>
				@Html.TextBoxFor(x => x.Celular, new { @class = "form-control", placeholder = "Digite o celular do contato" })
				@Html.ValidationMessageFor(x => x.Celular, "", new { @class = "text-danger" })
			</div>

			<button type="submit" class="btn btn-primary col-12 mb-3">Alterar</button>
			@Html.ActionLink("Voltar", "Index", "Contato", null, new { @class = "btn btn-secondary col-12" })
		}
	</div>
</div>